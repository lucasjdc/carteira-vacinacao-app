<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundo">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="Postos de Saúde"
        android:textColor="@color/corTitulo"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="17dp"
        android:text="Informe o CEP ou a cidade e encontre o Posto de Saúde mais perto de você"
        android:textAlignment="center"
        android:textColor="@color/corTitulo"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tela_posto_saude_edit_cep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/tela_posto_saude_edit_cep"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="CEP"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/tela_posto_saude_bt_buscar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/tela_posto_saude_bt_buscar"
        android:layout_width="137dp"
        android:layout_height="0dp"
        android:layout_marginBottom="188dp"
        android:background="@color/corTitulo"
        android:text="Buscar"
        app:layout_constraintBottom_toTopOf="@+id/enderereco_do_posto_saude_pelo_cep"
        app:layout_constraintEnd_toEndOf="@+id/tela_posto_saude_edit_cep"
        app:layout_constraintStart_toStartOf="@+id/tela_posto_saude_edit_cep"
        app:layout_constraintTop_toBottomOf="@+id/tela_posto_saude_edit_cep" />

    <TextView
        android:id="@+id/enderereco_do_posto_saude_pelo_cep"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="88dp"
        android:text="Endereço"
        android:textAlignment="center"
        android:textColor="@color/corTitulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tela_posto_saude_bt_buscar" />

</androidx.constraintlayout.widget.ConstraintLayout>
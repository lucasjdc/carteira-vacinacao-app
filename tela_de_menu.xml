<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundo">

    <Button
        android:id="@+id/bt_perfil"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="17dp"
        android:background="@color/corTitulo"
        android:text="@string/meu_perfil"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/bt_carteira_de_vacinacao"
        app:layout_constraintEnd_toEndOf="@+id/bt_carteira_de_vacinacao"
        app:layout_constraintStart_toStartOf="@+id/bt_carteira_de_vacinacao"
        app:layout_constraintTop_toBottomOf="@+id/tela_menu_titulo" />

    <Button
        android:id="@+id/bt_saude_gestante"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="288dp"
        android:background="@color/corTitulo"
        android:text="@string/sa_de_gestante"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bt_carteira_de_vacinacao"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_posto_saude"
        app:layout_constraintTop_toBottomOf="@+id/bt_posto_saude" />

    <TextView
        android:id="@+id/tela_menu_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="42dp"
        android:text="@string/ol_usu_rio_seja_bem_vindo_a"
        android:textColor="@color/corTitulo"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bt_perfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_carteira_de_vacinacao"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="16dp"
        android:background="@color/corTitulo"
        android:text="@string/carteira_de_vacina_o"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/bt_agendamentos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_perfil" />

    <Button
        android:id="@+id/bt_agendamentos"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="4dp"
        android:background="@color/corTitulo"
        android:text="@string/agendamentos"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/bt_posto_saude"
        app:layout_constraintEnd_toEndOf="@+id/bt_carteira_de_vacinacao"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/bt_carteira_de_vacinacao"
        app:layout_constraintTop_toBottomOf="@+id/bt_carteira_de_vacinacao" />

    <Button
        android:id="@+id/bt_posto_saude"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="35dp"
        android:background="@color/corTitulo"
        android:text="@string/posto_de_sa_de"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/bt_saude_gestante"
        app:layout_constraintEnd_toEndOf="@+id/bt_agendamentos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_agendamentos"
        app:layout_constraintTop_toBottomOf="@+id/bt_agendamentos" />

</androidx.constraintlayout.widget.ConstraintLayout>
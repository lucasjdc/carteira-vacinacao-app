<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundo">

    <TextView
        android:id="@+id/tela_menu_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="42dp"
        android:text="Olá, usuário Seja bem-vindo(a)!"
        android:textStyle="bold"
        android:textColor="@color/corTitulo"
        app:layout_constraintBottom_toTopOf="@+id/bt_perfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_perfil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:text="Meu Perfil"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/corFormulario"
        app:layout_constraintBottom_toTopOf="@+id/bt_carteira_de_vacinacao"
        app:layout_constraintEnd_toEndOf="@+id/bt_carteira_de_vacinacao"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/bt_carteira_de_vacinacao"
        app:layout_constraintTop_toBottomOf="@+id/tela_menu_titulo" />

    <Button
        android:id="@+id/bt_posto_saude"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="35dp"
        android:text="Posto de Saúde"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/corFormulario"
        app:layout_constraintBottom_toTopOf="@+id/bt_saude_gestante"
        app:layout_constraintEnd_toEndOf="@+id/bt_agendamentos"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/bt_agendamentos"
        app:layout_constraintTop_toBottomOf="@+id/bt_agendamentos" />

    <Button
        android:id="@+id/bt_agendamentos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="19dp"
        android:text="Agendamentos"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/corFormulario"
        app:layout_constraintBottom_toTopOf="@+id/bt_posto_saude"
        app:layout_constraintEnd_toEndOf="@+id/bt_carteira_de_vacinacao"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/bt_carteira_de_vacinacao"
        app:layout_constraintTop_toBottomOf="@+id/bt_carteira_de_vacinacao" />

    <Button
        android:id="@+id/bt_saude_gestante"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="288dp"
        android:text="Saúde Gestante"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/corFormulario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bt_carteira_de_vacinacao"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/bt_posto_saude"
        app:layout_constraintTop_toBottomOf="@+id/bt_posto_saude" />

    <Button
        android:id="@+id/bt_carteira_de_vacinacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="16dp"
        android:text="Carteira de Vacinação"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/corFormulario"
        app:layout_constraintBottom_toTopOf="@+id/bt_agendamentos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_perfil" />

</androidx.constraintlayout.widget.ConstraintLayout>